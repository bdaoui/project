
<div class="container">
  <div class="row text-center">
  <h2 id="title-gallery">List of restaurants</h2>
  </div>

  <div class="row">
    {{#each restaurants}}

      <div class="col-12 col-md-6 p-5" >
        <div class="card ">
          <img src="{{this.imageUrl}}" alt="" class="card-img-top">
          <h3 class="card-title"> {{ this.name }}</h3> 
          <h5 class="car  d-subtitle">{{ this.cuisine }}</h4>
          <a href="/restaurant/{{this._id}}" class="btn mr-2"><i class="fas fa-link"></i> More Details</a>
      </div>
    </div>

    {{/each}}

    </div>
    




