<h2 id="title-gallery">List of restaurants</h2>

<div class="container">
  <div class="row">
    {{#each restaurants}}

      <div class="col">
        <div class="card" style="width: 18rem;">
        <img src="{{this.imageUrl}}" alt="" class="card-img-top">
        <h3 class="card-title"> {{ this.name }}</h3> 
        <h5 class="card-subtitle">- posted by {{ this.owner.name }}</h4>
        <a href="/restaurant/{{this._id}}" class="btn mr-2"><i class="fas fa-link"></i> Visit Site</a>
        
        {{#if this.isOwner}}
      
        <form action="/restaurant/{{this._id}}/delete" method="POST" class="btn btn-primary">
          <button type="submit">Delete</button>
        </form>
    
    {{/if}}
      </div>
    </div>

    {{/each}}

    </div>
    




<a href="/">Back to homepage</a>