<div class="container mt-5">

  <form novalidate action="/restaurant/create" method="POST" enctype="multipart/form-data">
    <div>

      <h2>Create a restaurant!</h2>

      <div class="row ">
        <div class="col p-2">
          <label for="name" class="form-label"> Name</label>
          <input id="name" type="text" name="name" class="form-control" placeholder="King's Landing Best Tavern" required/>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <label for="cuisine" class="form-label pt-1 "> Cuisine</label>
      <input id="cuisine" type="text" name="cuisine" class="form-control" placeholder="Only the worst wine" required/>
        </div>
      </div>

      <div class="row">
        <div class="col">
        <label for="image" class="form-label pt-2">Add Image Link</label>
      <input id="image" type="text" name="imageUrl" class="form-control" placeholder="Link Goes Here"/>
        </div>
      </div>

      <div class="col">
        <label for="image" class="form-label pt-2">Upload Image</label>
        <input id="image" type="file" name="imageUrl" class="form-control-file" />
      </div>

      <div class="row ">
        <div class="col mt-2">
          <button class="btn btn-sm btn-dark  text-uppercase fw-bold mb-2" type="submit">Create New Restaurant</button>
        </div>
      </div>
    </form>
  </div>
</div>
